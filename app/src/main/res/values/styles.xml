<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    >

    <style name="curve" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">45sp</item>
        <item name="cornerSizeTopLeft">45sp</item>
    </style>
    <style name="edit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item  name="android:layout_width">match_parent</item>
        <item  name="android:layout_height">wrap_content</item>
        <item  name="android:layout_marginTop">10sp</item>
        <item  name="boxCornerRadiusBottomEnd">20sp</item>
        <item  name="boxCornerRadiusBottomStart">20sp</item>
        <item  name="boxCornerRadiusTopEnd">20sp</item>
        <item  name="boxCornerRadiusTopStart">20sp</item>
        <item name="startIconTint">@color/state</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>

    </style>

    <style name="search" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">#C1000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="circle">
    <item name="android:padding">10sp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50sp</item>
    </style>
    <style name="circle2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30sp</item>
    </style>

    <style name="medium" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSizeBottomRight">20sp</item>
        <item name="cornerSizeBottomLeft">20sp</item>
    </style>
    <style name="driver_mainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/white</item>
        <item name="android:navigationBarColor">#FFF</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/nunito</item>
        <item name="android:font" tools:ignore="NewApi">@font/nunito</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="harshCurve" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSizeBottomRight">30sp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>
    <style name="common">
        <item name="android:background">@drawable/unselect</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_marginEnd">10sp</item>
    </style>
</resources>